{
  "source": {
    "path": "./locales/en.json",
    "code": "en"
  },
  "targets": [
    {
      "path": "./locales/de.json",
      "code": "de"
    }
  ],
  "provider": "gemini",
  "chunkSize": 100,
  "concurrency": 3,
  "overwrite": false,
  "description": "My app context",
  "tone": "formal",
  "translateAllAtOnce": false,
  "export": {
    "outputPath": "./translations-export.csv",
    "delimiter": ",",
    "includeMetadata": false
  },
  "import": {
    "delimiter": ",",
    "skipHeader": true,
    "overwrite": false
  }
}
